# Makefile for MacOS
SRCDIR=./src
CC=gcc
INCLUDE = /opt/homebrew/include
CFLAGS = -g -I$(INCLUDE) -c
LIBS = /opt/homebrew/lib
LDFLAGS = -lSDL2main -lSDL2_image -lSDL2 -lm -lSDL2_ttf

game: main.o keybinds.o platforms.o
	$(CC) -o game main.o keybinds.o platforms.o $(LDFLAGS) -L $(LIBS) 

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

keybinds.o: $(SRCDIR)/keybinds.c $(SRCDIR)/keybinds.h
	$(CC) $(CFLAGS) $(SRCDIR)/keybinds.c

platforms.o: $(SRCDIR)/platforms.c $(SRCDIR)/platforms.h
	$(CC) $(CFLAGS) $(SRCDIR)/platforms.c

clean:
	rm -f *.o
	rm -f game
	
