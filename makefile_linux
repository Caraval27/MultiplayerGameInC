# Makefile for Linux
SRCDIR=./src
CC=gcc
#INCLUDE = C:\msys64\mingw64\include\SDL2

CFLAGS = -g -c -Wall
LDFLAGS = -lSDL2main -lSDL2_image -lSDL2 -lm -lSDL2_ttf

game: main.o
	$(CC) main.o -o playProgram $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

clean:
	rm playProgram
	rm *.o
