# Makefile for Linux
SRCDIR=./src
CC=gcc
# INCLUDE = C:\msys64\mingw64\include\SDL2

CFLAGS = -g -c -Wall
LDFLAGS = -lSDL2main -lSDL2_image -lSDL2 -lm -lSDL2_ttf

game: main.o keybinds.o platforms.o players.o
	$(CC) -o game main.o keybinds.o platforms.o players.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) $(CFLAGS) $(SRCDIR)/main.c

keybinds.o: $(SRCDIR)/keybinds.c $(SRCDIR)/keybinds.h
	$(CC) $(CFLAGS) $(SRCDIR)/keybinds.c

platforms.o: $(SRCDIR)/platforms.c $(SRCDIR)/platforms.h
	$(CC) $(CFLAGS) $(SRCDIR)/platforms.c

players.o: $(SRCDIR)/players.c $(SRCDIR)/players.h
	$(CC) -c $(SRCDIR)/players.c $(CFLAGS)

clean:
	rm -f game
	rm -f *.o
