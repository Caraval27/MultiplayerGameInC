# Makefile for Windows
SRCDIR=./src
CC=gcc
INCLUDE = C:\msys64\mingw64\include\SDL2

CFLAGS = -g -I$(INCLUDE)
LDFLAGS = -lmingw32 -lSDL2main -lSDL2_image -lSDL2_ttf -lSDL2 -mwindows -lm

game: main.o keybinds.o platforms.o
	$(CC) -o game main.o keybinds.o platforms.o $(LDFLAGS)

main.o: $(SRCDIR)/main.c
	$(CC) -c $(SRCDIR)/main.c $(CFLAGS)

keybinds.o: $(SRCDIR)/keybinds.c
	$(CC) -c $(SRCDIR)/keybinds.c $(CFLAGS)

platforms.o: $(SRCDIR)/platforms.c
	$(CC) -c $(SRCDIR)/platforms.c $(CFLAGS)
